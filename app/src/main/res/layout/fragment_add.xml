<!--                    android:textColor="@color/purple_500"-->
<!--                    android:textStyle="bold"-->
<!--                    android:gravity="center"/>-->

<!--            </androidx.cardview.widget.CardView>-->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>